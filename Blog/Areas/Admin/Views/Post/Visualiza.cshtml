@model	Post


<form asp-controller="Post" asp-action="EditaPost" method="post">
    <input type="hidden" asp-for="ID" />
    <input type="hidden" asp-for="Publicado" />
    <input type="hidden" asp-for="DataPublicacao" />
    @Html.EditorFor(post => post)
    <button type="submit" class="btn	btn-primary">Cadastrar</button>
</form>
@section Scripts{
    @Html.Partial("_Scripts")
}